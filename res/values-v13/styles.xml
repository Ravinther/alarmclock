<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@null</item>
        <item name="android:panelBackground">@android:color/white</item>
        <item name="android:panelFullBackground">@android:color/white</item>
        <item name="android:panelColorBackground">@android:color/white</item>
        <item name="android:checkboxStyle">@style/Widget.CompoundButton.CheckBox</item>
        <item name="android:editTextStyle">@style/editTextHoloDarkStyle</item>
        <item name="android:radioButtonStyle">@style/Widget.CompoundButton.RadioButton</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionModeBackground">@drawable/cab_background</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="android:actionBarWidgetTheme">@style/ActionBarWidget</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarWidgetTheme">@style/ActionBarWidget</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="actionModeBackground">@drawable/cab_background</item>
        <item name="searchViewAutoCompleteTextView">@style/AutoCompleteTextView</item>
    </style>
    <style name="baseListStyle">
        <item name="android:scrollbars">none</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:requiresFadingEdge">vertical</item>
    </style>
</resources>
