<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:padding="20dp" android:layout_width="-1" android:layout_height="-2">
    <ScrollView android:id="@id/scroll_content" android:layout_width="-1" android:layout_height="0dp" android:layout_above="@id/buttons_container" android:layout_alignParentTop="true">
        <RelativeLayout android:layout_gravity="1" android:layout_width="-2" android:layout_height="-1">
            <TextView android:textSize="26sp" android:textColor="0x106000b" android:id="@id/about_title" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="10dp" android:text="@string/about_app_title" android:layout_centerHorizontal="true" />
            <TextView android:textColor="0x106000b" android:gravity="11" android:id="@id/about_version" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="5dp" android:layout_below="@id/about_title" android:layout_centerHorizontal="true" />
            <TextView android:textSize="18sp" android:textColor="0x106000b" android:id="@id/about_tos_link" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="25dp" android:text="@string/about_term_of_service" android:layout_below="@id/about_version" android:layout_centerInParent="true" android:layout_centerHorizontal="true" />
            <TextView android:textSize="18sp" android:textColor="0x106000b" android:id="@id/about_privacy_link" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="5dp" android:text="@string/about_privacy_policy" android:layout_below="@id/about_tos_link" android:layout_centerHorizontal="true" />
