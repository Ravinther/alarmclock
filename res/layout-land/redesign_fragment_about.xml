    <LinearLayout android:orientation="0" android:id="@id/buttons_container" android:layout_width="-1" android:layout_height="-2" android:layout_marginTop="5dp" android:weightSum="2.0" android:layout_above="@id/about_more_apps">
        <Button android:textColor="0x106000b" android:id="@id/share_app_button" android:background="@drawable/btn_blue_holo_selector" android:padding="10dp" android:layout_width="0dp" android:layout_height="-1" android:text="@string/share_button_text" android:layout_weight="1.0" />
        <Button android:textColor="0x106000b" android:id="@id/rate_app_button" android:background="@drawable/btn_blue_holo_selector" android:padding="10dp" android:layout_width="0dp" android:layout_height="-1" android:layout_marginLeft="15dp" android:text="@string/rate_button_text" android:layout_weight="1.0" />
    </LinearLayout>
    <Button android:textColor="0x106000b" android:id="@id/about_more_apps" android:background="@drawable/btn_blue_holo_selector" android:padding="10dp" android:layout_width="-1" android:layout_height="-2" android:layout_marginTop="10dp" android:text="@string/about_more_avg_apps" android:layout_alignParentBottom="true" />
</RelativeLayout>
